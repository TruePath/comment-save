{
  "name": "Comment Save",
  "version": "0.1",
  "description": "Saves comments.",
  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
   ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["page.js"]
    }
  ],
  "browser_action": {
    "default_title": "Comment Save",
    "default_icon": "clock.png",
    "popup": "popup.html"
  }
}
