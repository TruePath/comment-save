{
  "name": "Comment Save",
  "version": "0.2",
  "description": "Keeps tracks of your comments/posts as you type. Allows you to quickly look up the last one you wrote and your history.",
  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
   ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.js", "page.js"],
	  "all_frames": true
    }
  ],
  "icons": { "16": "16.png",
             "48": "48.png",
             "128":"128.png" },
  "browser_action": {
    "default_title": "Comment Save",
    "default_icon": "16.png",
    "popup": "popup.html"
  }
}
