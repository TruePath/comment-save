{
  "name": "Comment Save",
  "version": "0.5",
  "description": "Keeps tracks of your comments/posts as you type. Allows you to quickly look up the last one you wrote and your history.",
  "background_page": "background.html",
  "options_page": "allcomments.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*",
	"contextMenus"
   ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["jquery.js", "page.js"],
	  "run_at": "document_end",
	  "all_frames": true
    }
  ],
  "icons": { "16": "128nn.png",
             "48": "128nn.png",
             "128":"128nn.png" },
  "browser_action": {
    "default_title": "Comment Save",
    "default_icon": "128nn.png",
    "popup": "popup.html"
  }
}
